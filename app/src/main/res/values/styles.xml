<resources>

    <!-- Default application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkgrey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/lightgrey</item>
        <item name="@android:windowBackground">@color/black</item>
        <item name="@android:textColor">@color/dimgray</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppDayTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/pink</item>
        <item name="@android:windowBackground">@color/white</item>
    </style>
    <style name="AppDayTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppDayTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppDayTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WidthMatchHeightWrapStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidthWrapHeightWrapStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
